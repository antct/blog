<section class='m_widget about'>
    <% if (config.avatar) { %>
    <img class='avatar waves-image' src='<%= url_for(config.avatar) %>' />
    <% } %>
    <div class='header'><%= config.author %></div>
    <% if (config.motto) { %>
    <div id='motto-div' class='content'>
        <div class='desc'>
            <span id='motto' style="white-space:pre-wrap;"><%= config.motto %></span>
        </div>
    </div>
    <% } %>
</section>